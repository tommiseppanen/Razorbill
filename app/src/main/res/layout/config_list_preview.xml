<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <View
            android:id="@+id/watch_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/preview_analog"/>


    <ImageView
            android:id="@+id/left_complication_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_complication"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageButton
            android:id="@+id/left_complication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageView
            android:id="@+id/right_complication_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_complication"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageButton
            android:id="@+id/right_complication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>
</RelativeLayout>