<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/watch_face_background"
            android:padding="@dimen/preview_background_padding"
            android:scaleType="fitXY"
            android:layout_width="@dimen/preview_size"
            android:layout_height="@dimen/preview_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/preview_background"/>

    <View
            android:id="@+id/watch_face_highlight"
            android:layout_width="@dimen/preview_size"
            android:layout_height="@dimen/preview_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/preview_highlight"/>


    <View
            android:id="@+id/watch_face_arms_and_ticks"
            android:layout_width="@dimen/preview_size"
            android:layout_height="@dimen/preview_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/preview_arms_and_ticks"/>


    <ImageView
            android:id="@+id/left_complication_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/added_complication"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageButton
            android:id="@+id/left_complication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageView
            android:id="@+id/right_complication_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/added_complication"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>

    <ImageButton
            android:id="@+id/right_complication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="?android:borderlessButtonStyle"
            android:background="@android:color/transparent"/>
</RelativeLayout>